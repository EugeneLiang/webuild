doctype
html(lang='en')

  head
    meta(charset='utf-8')

    title We Build SG
    meta(name='description', content='a list of free open events and open source libraries for the curious folks who love to make things!')
    meta(name='keywords', content='Singapore, SG, open community, open source, software, hardware, programming, design, maker movement, free events, free tech events')
    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')

    meta(property='og:image', content='public/logo.png')
    meta(property='og:url', content='http://www.webuild.sg')
    meta(property='og:site_name', content='www.webuild.sg')
    meta(property='og:title', content='We Build SG')
    meta(property='og:description', content='a list of free open events and open source libraries for the curious folks who love to make things!')
    meta(property='og:type', content='website')

    link(href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,700', rel='stylesheet', type='text/css')
    link(rel='stylesheet', href='public/css/style.css')

    link(rel='apple-touch-icon', href='public/apple-touch-icon.png')
    link(rel='apple-touch-icon', sizes='72x72', href='public/apple-touch-icon-72x72-precomposed.png')
    link(rel='apple-touch-icon', sizes='114x114', href='public/apple-touch-icon-114x114-precomposed.png')
    link(rel='apple-touch-icon', sizes='144x144', href='public/apple-touch-icon-144x144-precomposed.png')
  body

    //if lt IE 9
      p.chromeframe Your browser is <em>ancient!</em> <a href='http://browsehappy.com/'>Upgrade to a cool new browser</a> to experience this site!

    div.wrapper
      header
        .container
          h1 we build!
          h2 Exploring the tech scene in Singapore? Connect with people who are&nbsp;
            ul.people
              li ...
              li designers
              li developers
              li makers
      .main.container

        a.live(href="http://live.webuild.sg")
          h3 Catch We Build LIVE
          p.countdown
          p#livetime.time

        section
          h3 open events
          ul.open-list.first
            each event in events
              li
                a(href=event.url)
                  p= event.name
                    span= 'on ' + event.formatted_time
                  p.tagline= 'by ' + event.group_name

        section
          h3 open source
          ul.open-list.second
            each repo in repos
              li
                a(href=repo.html_url)
                  p= repo.name
                    span= 'updated ' + moment(repo.pushed_at).endOf('hour').fromNow()
                    span.stars!= '&#9733; ' + repo.stargazers_count
                  p.tagline= repo.description

      footer
        .container
          p Subscribe in iCal or GCal with URL
            input(type="text", value="http://webuild.sg/cal", class="input" id="selectAll")
            span.helptext Click to select URL

      .main.container
        h3 check for open event clashes
        input#check.event-checker(type='date', placeholder='dd/mm/yyyy')
        .spinner#loader
          div
        p.tagline.center#results
        ul#clashed.open-list

        p.explain a list of free public events and open source projects for the curious folks who love to make things!

      footer
        .container
          :markdown
            Checkout more cool events and people in startup, arts and tech with
            [thelist.sg](http://thelist.sg/),
            [connections.sg](http://connections.sg/),
            [hackerspace](http://hackerspace.sg/calendar/hackerspacesg-events/),
            [bHappening](http://bhappening.wordpress.com/) and
            [tech in asia](http://www.techinasia.com/tech-startup-events/)

      ul.social
        li
          a(href='https://twitter.com/webuildsg')
            span.icon-twitter
          p Twitter
        li
          a(href='http://www.facebook.com/webuildsg')
            span.icon-facebook
          p Facebook
        li
          a(href='https://github.com/webuildsg')
            span.icon-github
          p GitHub
        li
          a(href='/cal')
            span.icon-calendar
          p Calendar

